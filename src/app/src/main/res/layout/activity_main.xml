<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.administrator.oldmanstock.MainActivity"
    android:background="#000000">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView android:id="@+id/Clock"
            android:text="01-02  03:04"
            android:textAlignment="center"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView android:id="@+id/TitleCode"
            android:text="股票代码"
            android:textAlignment="center"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView android:id="@+id/TitleOpen"
            android:text="昨收/今开"
            android:textAlignment="center"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView android:id="@+id/TitleCur"
            android:text="当前价"
            android:textAlignment="center"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView android:id="@+id/TitleRiseFall"
            android:text="涨跌幅"
            android:textAlignment="center"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView android:id="@+id/TitleTop"
            android:text="最高价"
            android:textAlignment="center"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView android:id="@+id/TitleBottom"
            android:text="最低价"
            android:textAlignment="center"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView android:id="@+id/TitleDeal"
            android:text="成交量（万手）/额（万）"
            android:textAlignment="center"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fastScrollEnabled="true"
        android:scrollingCache="false"
        android:smoothScrollbar="true"
        android:persistentDrawingCache="none"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"/>


</LinearLayout>
